{
    "manifest_version": 2,
    "name": "Plaza",
    "version": "0.0.1",

    "description": "Companion addon for plaza.",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],

    "browser_action": {
        "default_icon": {
            "48": "icons/icon-48.png"
        },
        "default_title": "Plaza",
        "default_popup": "popup/plaza.html"
    },

    "applications": {
        "gecko": {
            "id": "plaza@plaza.spiral.systems"
        }
    }
}
